<div class="forms">
<form method="post" action="/products">
<ul>
<li>  <label for="name">Name: </label>
  <input id="name" type="text" name="name" /></li>

  <li><label for="type">Type: </label>
  <input id="type" type="text" name="type" /></li>

  <li><label for="quantity">Quantity: </label>
  <input id="quantity" type="text" name="quantity" /></li>

  <li><label for="cost_price">Cost Price: </label>
  <input id="cost_price" type="text" name="cost_price" /></li>

  <li><label for="sell_price">Sale Price: </label>
  <input id="sell_price" type="text" name="sell_price" /></li>


  <li><label for="supplier">Select a Supplier:</label>
  <select id="supplier" name="supplier_id">
    <% for supplier in @suppliers %>
    <option value=<%= supplier.id %>> <%= supplier.name %> </option>
    <%end%>
  </select></li>


  <input type="submit" value="add"/>
</ul>
</form>
</div>
